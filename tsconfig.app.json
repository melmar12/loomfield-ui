{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* paths */
    "baseUrl": "src",
    "paths": {
      "@/utils/validation": ["utils/validation.ts"],
      "@/types/FormTypes": ["types/FormTypes.ts"],
      "@Button": ["components/Button/Button.tsx"],
      "@CheckBox": ["components/CheckBox/CheckBox.tsx"],
      "@Form": ["components/Form/Form.tsx"],
      "@NumberInput": ["components/NumberInput/NumberInput.tsx"],
      "@RadioGroup": ["components/RadioGroup/RadioGroup.tsx"],
      "@Select": ["components/Select/Select.tsx"],
      "@Spinner": ["components/Spinner/Spinner.tsx"],
      "@SuccessScreen": ["components/SuccessScreen/SuccessScreen.tsx"],
      "@TextArea": ["components/TextArea/TextArea.tsx"],
      "@TextInput": ["components/TextInput/TextInput.tsx"],
    }
  },
  "include": ["src"]
}
